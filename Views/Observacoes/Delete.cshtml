@model API_MVC_Achados_e_Enchentes.Models.Observacoes

@{
    ViewData["Title"] = "Deletar";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0px;
    }

    h1 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }

    h3 {
        color: #333;
        text-align: center;
        margin-bottom: 20px;
    }


    .row {
        margin-left: -15px;
        margin-right: -15px;
    }

    .col-sm-2,
    .col-sm-10 {
        float: left;
        position: relative;
        width: 100%;
        min-height: 1px;
        padding-left: 15px;
        padding-right: 15px;
    }

    .col-sm-2 {
        width: 16.66666667%;
    }

    .col-sm-10 {
        width: 83.33333333%;
    }

    .btn-danger {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            color: #fff;
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>

<h1>Deletar Observações</h1>

<h3>Você quer realmente deletar isto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ObservacaoDescricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ObservacaoDescricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ObservacaoLocal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ObservacaoLocal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ObservacaoData)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ObservacaoData)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pessoa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pessoa.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>