@model API_MVC_Achados_e_Enchentes.Models.Usuario

@{
    ViewData["Title"] = "Detalhes";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0px;
    }

    h1, h4 {
        color: #333;
        text-align: center;
    }

    h1 {
        margin-bottom: 20px;
    }

    .row {
        display: flex;
        justify-content: center;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #555;
    }

    .col-sm-10 {
        color: #333;
    }

    dl {
        display: flex;
        flex-wrap: wrap;
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    dt {
        margin-bottom: 10px;
    }

    dd {
        margin-bottom: 10px;
        margin-left: 0;
    }

    a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    div > a {
        display: block;
        margin-top: 15px;
        text-align: center;
    }
</style>

<h1>Detalhes do Usuário</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioTelefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioTelefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioSenha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioSenha)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> 
    <a asp-action="Index">Voltar para a lista</a>
</div>