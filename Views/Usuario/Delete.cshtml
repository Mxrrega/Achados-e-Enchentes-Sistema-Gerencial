@model API_MVC_Achados_e_Enchentes.Models.Usuario

@{
    ViewData["Title"] = "Deletar";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0px;
    }

    h1, h3, h4 {
        color: #333;
        text-align: center;
    }

    h1 {
        margin-bottom: 20px;
    }

    h3 {
        margin-bottom: 10px;
        color: #dc3545;
    }

    .row {
        display: flex;
        justify-content: center;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #555;
    }

    .col-sm-10 {
        color: #333;
    }

    dl {
        display: flex;
        flex-wrap: wrap;
        background-color: #fff;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    dt {
        margin-bottom: 10px;
    }

    dd {
        margin-bottom: 10px;
        margin-left: 0;
    }

    a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        color: #fff;
        text-align: center;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    form {
        text-align: center;
    }

        form > a {
            display: inline-block;
            margin-left: 10px;
        }
</style>

<h1>Deletar Usuário</h1>

<h3>Você quer realmente deletar isto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioTelefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioTelefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsuarioSenha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioSenha)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a asp-action="Index">Voltar para a lista</a>
    </form>
</div>